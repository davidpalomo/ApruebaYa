# ApruebaYa - Archivo .env de ejemplo

# API de Gemini Flash
GEMINI_API_KEY=add_your_gemini_api_key_here

# Base de datos PostgreSQL
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/apruebaYa

# Configuración del servidor
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Configuración de almacenamiento
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=20971520  # 20MB en bytes

# Configuración de seguridad
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=15  # minutos
RATE_LIMIT_MAX=100  # solicitudes

# Configuración de OCR
TESSERACT_LANG=spa
OCR_TIMEOUT=300000  # 5 minutos en milisegundos

# Configuración de RAG
VECTOR_INDEX_DIR=/app/vector_indices
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
