files:
  "/etc/nginx/conf.d/01_proxy.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      client_max_body_size 10M;      # Aumentar el tamaño máximo de carga a 10MB
      client_body_buffer_size 10M;   # Aumentar el tamaño del buffer
      
      # Configuración para una aplicación Node.js detrás de proxy
      proxy_buffer_size 128k;
      proxy_buffers 4 256k;
      proxy_busy_buffers_size 256k;
      
      # Configurar tiempos de espera más largos para cargas grandes
      proxy_connect_timeout 600s;
      proxy_send_timeout 600s;
      proxy_read_timeout 600s;

container_commands:
  01_reload_nginx:
    command: "service nginx reload || true" 